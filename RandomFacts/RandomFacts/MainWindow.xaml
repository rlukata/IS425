<Window x:Name="RandomFactsWindow" x:Class="RandomFacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomFacts"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Random Facts!" Height="350" Width="522.775" IsTabStop="False" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF2EFF00">
        <Button x:Name="randomFactButton" Content="Click for a random fact!" Height="40" VerticalAlignment="Top" 
                Click="randomFactButton1_Click" Background="#FF2EFF00" Foreground="#FF5D00FF" Margin="147,10,148,0" 
                RenderTransformOrigin="0.494,1.031" FontSize="16" FontFamily="Comic Sans MS"/>
        <ScrollViewer x:Name="Scroller" Height="258" Margin="0,54,0,5" VerticalScrollBarVisibility = "Auto">
            <TextBlock x:Name="randomFactTextBlock" HorizontalAlignment="Left" Height ="auto" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="24" 
                       Background="#FF2EFF00" Foreground="#FF5D00FF"/>
        </ScrollViewer>
    </Grid>
</Window>
